<%= content_for :title do %>Landlord Login<% end %>

<%= content_for :page_header do %>Landlord Login<% end %>


<%= form_for @user, url: "/sessions", method: "post" do |f| %>
  <div class="input-field">
    <%= f.email_field :email %>
    <%= label_tag 'Email Address' %>
  </div>
  <div class="input-field">
    <%= f.password_field :password %>
    <%= label_tag 'Password' %>
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action">
    <%= f.submit "Login" %>
  </button>
<% end %>
