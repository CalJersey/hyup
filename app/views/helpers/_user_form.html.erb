<%= form_for user do |f| %>
  <div class="input-field">
      <%= f.text_field :name, :class => "validate", :required => "" %>
      <%= label_tag 'Full Name' %>
  </div>
  <div class="input-field">
    <%= f.telephone_field :phone, :class => "validate input-field", :required => "" %>
    <%= label_tag 'Phone Number' %>
  </div>
  <div class="input-field">
    <%= f.email_field :email, :class => "validate", :required => "" %>
    <%= label_tag 'Email Address' %>
  </div>
  <% if !user.id %>
    <div class="input-field">
      <%= f.password_field :password, :class => "validate", :required => "" %>
      <%= label_tag 'Password' %>
    </div>
  <% end %>
  <button class="btn waves-effect waves-light" type="submit" name="action" data-turbolinks="false">
    <%= f.submit sub_button %>
  </button>
  <% if user.id %>
    <button class="btn waves-effect waves-light" type="button" name="destroy">
      <%= link_to "delete", user_path(user), :method => :delete %>
    </button>
  <% end %>
<% end %>
