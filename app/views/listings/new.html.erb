<h3>Create Listing</h3>

<div class="row">
  <%= form_for @listing do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :title %>
        <%= label_tag 'title' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
      <%= f.text_field :rent %>
      <%= label_tag 'Rent' %>
    </div>
      <div class="input-field col s6">
        <%= f.text_field :available_date %>
          <%= label_tag 'Available Date' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :address %>
        <%= label_tag 'Address' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :description, :class => "materialize-textarea" %>
        <%= label_tag 'Description' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :contact_phone %>
        <%= label_tag 'Contact Phone' %>
      </div>
      <div class="input-field col s6">
        <%= f.email_field :contact_email %>
        <%= label_tag 'Contact Email' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :city %>
        <%= label_tag 'City' %>
      </div>
    </div>
    <%= f.submit "Save listing" %>
  <% end %>

</div>
